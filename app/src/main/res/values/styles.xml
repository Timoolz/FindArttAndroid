<resources>


    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_detail_text</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="android:colorForeground">@color/color_primary_dark</item>
    </style>



    <style name="AppTheme.CardView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--<item name="android:foreground">?selectableItemBackground</item>-->
        <item name="cardCornerRadius">@dimen/app_corner_radius</item>
        <item name="android:elevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="android:stateListAnimator">@animator/article_list_card_lift_up</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/color_detail_text</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textColorHint">@color/color_secondary_text</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:backgroundTint">@drawable/focus_tint</item>
        <item name="android:textCursorDrawable">@color/color_primary</item>
    </style>

    <style name="AppTheme.EditText.Check">
        <item name="android:buttonTint">@drawable/check_filter_tint</item>

    </style>


    <style name="AppTheme.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/button_background</item>


    </style>

    <style name="AppTheme.Button.Google">

        <item name="android:background">@drawable/common_google_signin_btn_icon_light_normal</item>
        <item name="android:padding">0dp</item>


    </style>


    <style name="AppTheme.TextView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="AppTheme.TextView.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextView.Large">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
